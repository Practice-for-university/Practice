<Window x:Class="Практика_2._0.WindowsSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика_2._0"
        mc:Ignorable="d"
        Title="Настройки - окно" Height="320" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="Namer_lab" Content="Общее" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="100" FontStyle="Italic" />
        <Button x:Name="Exit_b" Content="Закрыть" HorizontalAlignment="Center" Height="30" Grid.Row="2" VerticalAlignment="Center" Width="100" Click="Exit_b_Click"/>
        <Label Content="Пока что ничего" HorizontalAlignment="Left" Height="30" Margin="60,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="120"/>
        <ToggleButton x:Name="NW_tb" Content="Вкл" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Width="30" Height="30" Checked="NW_tb_Checked"/>
    </Grid>
</Window>
